{
	"name": "every-last-drop",
	"version": "1.0.0",
	"description": "Every Last Drop is the complete database management system for the small bar, or bar owner",
	"main": "src/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "node .",
		"darwin-set-env" : "node src/dev/darwin-set-env.js",

		"sql-init": "npm-run-all \"darwin-set-env sql-init\" sql-init-os",
		"sql-init-os": "run-script-os",
		"sql-init-os:linux": "sh src/build/linux-sql-init.sh",
		"sql-init-os:darwin": "sh src/build/darwin-sql-init.sh",
		"sql-init-os:default": "src\\build\\windows-sql-init.batch",

		"sql-login": "run-script-os",
		"sql-login:linux": "sh src/dev/linux-sql-login.sh",
		"sql-login:darwin": "sh src/dev/darwin-sql-login.sh",
		"sql-login:default": "src\\dev\\windows-sql-login.batch",

		"gen-m3-sql": "node src/dev/jsonToSql.js ./data/sample-m3.json ./data/sample-m3.sql",
		"sql-status": "mariadb --defaults-extra-file=config/sql-login --table < src/sql/status.sql",

		"os-test-set" : "npm-run-all \"darwin-set-env sql-init\" os-test",
		"os-test": "echo $npm_config_argv; echo $npm_config_user_agent"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/brennanwilkes/every-last-drop.git"
	},
	"author": "Mali Truong/Charles Lewis/Brennan Wilkes",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/brennanwilkes/every-last-drop/issues"
	},
	"homepage": "https://github.com/brennanwilkes/every-last-drop#readme",
	"dependencies": {
		"express": "^4.17.1",
		"mariadb": "^2.4.2",
		"node": "^14.13.0"
	},
	"devDependencies": {
		"nodemon": "^2.0.5",
		"npm-run-all": "^4.1.5",
		"run-script-os": "^1.1.1"
	}
}
